%tr
  %td= item.nome
  %td
    = text_field_tag 'pedido[itens_attributes][][quantidade]', item.quantidade
    = hidden_field_tag 'pedido[itens_attributes][][id]', item.id
    = submit_tag 'Atualizar', :class => 'btn'
  %td= number_to_currency item.preco_unitario
  %td= number_to_currency item.preco_total